{
    "models": [
        {
            "name": "Product",
            "fields": [
                {"name": "title", "type": "string", "length": 255},
                {"name": "slug", "type": "string", "unique": true},
                {"name": "description", "type": "text", "nullable": true},
                {"name": "price", "type": "decimal", "nullable": false},
                {"name": "stock", "type": "integer", "default": 0},
                {"name": "is_active", "type": "boolean", "default": true},
                {"name": "published_at", "type": "datetime", "nullable": true}
            ],
            "relationships": [
                {"type": "belongsTo", "model": "Category"},
                {"type": "hasMany", "model": "Review"}
            ],
            "options": {
                "softDeletes": true,
                "tests": true
            }
        },
        {
            "name": "Category",
            "fields": [
                {"name": "name", "type": "string"},
                {"name": "slug", "type": "string", "unique": true},
                {"name": "description", "type": "text", "nullable": true},
                {"name": "sort_order", "type": "integer", "default": 0}
            ],
            "relationships": [
                {"type": "hasMany", "model": "Product"},
                {"type": "hasMany", "model": "Category", "method": "children"}
            ]
        },
        {
            "name": "Review",
            "fields": [
                {"name": "title", "type": "string"},
                {"name": "body", "type": "text"},
                {"name": "rating", "type": "integer"},
                {"name": "is_approved", "type": "boolean", "default": false}
            ],
            "relationships": [
                {"type": "belongsTo", "model": "Product"}
            ]
        },
        {
            "name": "Tag",
            "fields": [
                {"name": "name", "type": "string"},
                {"name": "slug", "type": "string", "unique": true},
                {"name": "color", "type": "string", "length": 7, "nullable": true}
            ]

        }
    ],
    "options": {
        "type": "both",
        "css": "tailwind",
        "all": true,
        "apiResource": true
    }
}
